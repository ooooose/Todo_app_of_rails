<% provide(:title, "Edit user") %>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control"  %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.submit "Edit user" ,class: "btn btn-primary mt-2 float-right" %>
<% end %>
