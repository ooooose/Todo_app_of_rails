<% provide(:title, "Create User") %>
<% provide(:intro, "新しいユーザーを作成できます") %>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, class: "mt-2" %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.submit "Create User", class: "btn btn-primary mt-2 float-right" %> 
<% end %>


